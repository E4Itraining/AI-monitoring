# ==============================================
# AI MONITORING PLATFORM - CONFIGURATION
# ==============================================
# Copiez ce fichier en .env et ajustez les valeurs

# ----- VERSIONS DES SERVICES -----
PROMETHEUS_VERSION=2.51.1
GRAFANA_VERSION=11.0.0
TEMPO_VERSION=2.6.0
OPENSEARCH_VERSION=2.13.0
OTEL_COLLECTOR_VERSION=0.94.0
FLUENT_BIT_VERSION=2.2.3
ALERTMANAGER_VERSION=0.27.0
VICTORIA_METRICS_VERSION=1.96.0
OPENOBSERVE_VERSION=0.10.0

# ----- CREDENTIALS GRAFANA -----
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin
# En production, utilisez un mot de passe fort!
# GF_ADMIN_PASSWORD=VotreMotDePasseSecurise123!

# ----- OPENSEARCH -----
OPENSEARCH_INITIAL_ADMIN_PASSWORD=admin
OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
# Pour plus de memoire:
# OPENSEARCH_JAVA_OPTS=-Xms1g -Xmx1g

# ----- APPLICATION AI -----
OTEL_SERVICE_NAME=ai-lab-app
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_TRACES_EXPORTER=otlp
APP_LOG_LEVEL=INFO

# ----- PROMETHEUS -----
PROMETHEUS_SCRAPE_INTERVAL=5s
PROMETHEUS_RETENTION_TIME=15d

# ----- ALERTMANAGER -----
ALERTMANAGER_RESOLVE_TIMEOUT=5m
# Slack Webhook (optionnel)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ
# SLACK_CHANNEL=#ai-alerts

# ----- SMTP POUR ALERTES EMAIL (optionnel) -----
# SMTP_SMARTHOST=smtp.example.com:587
# SMTP_FROM=alertmanager@example.com
# SMTP_AUTH_USERNAME=alertmanager
# SMTP_AUTH_PASSWORD=password

# ----- VICTORIA METRICS (scalable) -----
VM_RETENTION_PERIOD=1
VM_STORAGE_DATA_PATH=/storage

# ----- OPENOBSERVE (scalable) -----
ZO_ROOT_USER_EMAIL=admin@example.com
ZO_ROOT_USER_PASSWORD=Complexpassword#123

# ----- NETWORK -----
NETWORK_NAME=obsnet
